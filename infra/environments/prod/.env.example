# POD_MEMORY_LIMIT=3Gi
# WORKERS_PER_POD=2
# ACM_CERTIFICATE_ARN=arn:aws:acm:us-west-2:ACCOUNT:certificate/xxx
# PRIMARY_DOMAIN=api-eks.kortix.com
